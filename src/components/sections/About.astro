<style>
.about {
    margin-top: 11rem;
}

.container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin: 0 auto;
  padding: 0 1rem;
  gap: 2rem;
}

@media (width < 1150px) {
  .container {
    flex-direction: column;
    align-items: center;
  }
}

.composition-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.profile-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 5rem;
}

@media (width < 1150px) {
  .profile-container {
    flex-direction: column;
    align-items: center;
  }
}

.greeting-container {
  display: flex;
  flex-direction: column;
  justify-content: left;
  min-width: 20.5rem;
}

.paragraph-container {
  max-width: 80rem;
}

@media (width < 850px) {
  .paragraph-container {
    max-width: 50rem;
  }
}

.greeting {
  font-size: var(--p-web-big);
  font-weight: var(--p-medium);
}

.heading-4 {
  font-size: var(--h4-web);
  line-height: var(--headings-lineheight);
}

.paragraph {
  font-size: var(--p-web-big);
  font-weight: var(--p-regular);
}

.window-container {
  margin-top: 7rem;
  max-width: 106rem;
  overflow: hidden;
}

@media (width < 1150px) {
  .window-container {
    max-width: 80rem;
  }
}

@media (width < 850px) {
  .window-container {
    max-width: 50rem;
  }
}

.window-top {
  border: .1rem solid var(--primary-50);
  border-radius: 1rem 1rem 0 0;
  background: var(--low-linear-gradient);
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
}

.window-title {
  margin-left: 1rem;
}

.window-title p {
  font-family: var(--paragraph-font);
  font-size: var(--p-web-small);
  font-weight: var(--p-regular);
}

.buttons {
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
  margin: 1rem 0 1rem 1rem;
  gap: .5rem;
}

.ui-button {
  background: var(--primary-50);
  border-radius: 50%;
  width: 1rem;
  height: 1rem;
}

.window-content {
  border: .1rem solid var(--primary-50);
  border-radius: 0 0 1rem 1rem;
}

.tech-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.marquee {
  --gap: 1rem;
  font-family: var(--paragraph-font);
  font-size: var(--h4-web);
  display: flex;
  overflow: hidden;
  gap: var(--gap);
  width: 100%;
}

.marquee__content {
  list-style: none;
  flex-shrink: 0;
  display: flex;
  justify-content: space-around;
  min-width: 100%;
  gap: var(--gap);
  animation: scroll 15s linear infinite;
}

@keyframes scroll {
  from {
    transform: translateX(0);
  }
  to {
    transform: translateX(calc(-100% - var(--gap)));
  }
}

</style>
